<Window x:Name="Awesome_App" x:Class="WpfApplicationTraining.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplicationTraining"
        mc:Ignorable="d"
        Title="Awesome_App" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="18" Margin="181,34,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="269" TextChanged="textBox_TextChanged"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="18" Margin="38,34,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="94"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Height="18" Margin="38,141,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="94"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="18" Margin="181,141,0,0" VerticalAlignment="Top" Width="280" TextInput="passwordBox_TextInput"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Left" Height="26" Margin="94,206,0,0" VerticalAlignment="Top" Width="322" Click="button_Click"/>
    </Grid>
</Window>
